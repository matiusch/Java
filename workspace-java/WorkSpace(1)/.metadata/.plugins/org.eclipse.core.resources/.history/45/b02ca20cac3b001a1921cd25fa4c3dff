	private BDVeiculo bd = new BDVeiculo();
	
	@GetMapping("/veiculo/todos")
	public ResponseEntity<ArrayList<Veiculo>> getTodos(){
		
		return ResponseEntity.ok(bd.buscarTodos());
	}

